<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DS Đơn Nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body>
    <% if(session.u_d_id == 1){ %>
        <%- include('../z_layout/navigation') %>
    <% }else if(session.u_d_id == 2 ){ %>
        <%- include('../z_layout/nav_2') %>
    <% }else if(session.u_d_id == 3 ){ %>
        <%- include('../z_layout/nav_3') %>
    <% } %>
    
    <div class="container">
        <h2 class="text-center">
            Danh sách đơn nhập
        </h2>
        <a href="#divUD" class="btn btn-outline-danger">Tạo đơn nhập</a>
        <table class="table table-hover">
            <thead>
                <td>ID</td>
                <td>Name</td>
                <td>Date</td>
                <td>Price</td>
                <td></td>
                <td colspan="2">Action</td>
            </thead>

            <% if(test.length > 0){ %>
                <% for(var i=0; i <test.length; i++){  %>
                    <tr>
                        <td><%= test[i].ib_id %></td>
                        <td><%= test[i].ib_name %></td>
                        <td><%= Intl.DateTimeFormat("vi-VN", {dateStyle: "short", timeStyle : "short"}).format( test[i].ib_date ) %></td>
                        <td><%= Intl.NumberFormat({style: "currency", currency: "VND"}).format( test[i].ib_cost ) %></td>
                        <td>VNĐ</td>
                        <td>
                            <a class="btn btn-primary" href="/chitietdonnhap?ib_id=<%- test[i].ib_id %>">Detail</a>
                        </td>
                    </tr>
                <% } %>
            <% } else { %>
                <p>Data Not Found</p>
            <% } %>
        </table>
    </div>

    <script>
        function validate(){
            var ib_name = document.getElementById("ib_name");
            var lblib_name = document.getElementById("lblib_name");

            if(ib_name.value.trim() == "")
            {
                ib_name.style.border = "solid 3px red";
                lblib_name.style.visibility = "visible";
                return false;
            }

            return true;
        }
    </script>
   
    <div class="UD_overplay" id="divUD">

        <div class="UD_wrapper">
            <h2>Tạo đơn nhập</h2>
            <a href="#" class="close">&times;</a>
            <div class="content">
                <div class="container">
                    <form action="/taodonnhap" method="POST" onsubmit="return validate();">

                        <label for="">Tên đơn nhập</label>
                        <input id="ib_name" name="ib_name" type="text" placeholder="Nhập tên đơn nhập..." value="">
                        <label id="lblib_name" style="color: red; visibility: hidden; font-style: italic;">Không được để trống !</label>
                        <br>
                        <% var currentdate = new Date(); %>
                        <% var datetime = currentdate.getFullYear() + "-" + (currentdate.getMonth()+1) + "-" + currentdate.getDate() + "  "  + currentdate.getHours() + ":"   + currentdate.getMinutes() + ":"  + currentdate.getSeconds(); %>
        
                        <label for="">Ngày tạo</label>
                        <input type="text" name="ib_date" value="<%= datetime %>" readonly>

                        <br>
                        <label for="">Chi Nhánh</label>
                        <select class="form-control" name="ib_br_id" id="">
                            <% for(var t = 0; t < br.length; t++){ %>
                                <option name="ib_br_id" value="<%- br[t].br_id %>"> <%- br[t].br_name %></option>
                            <% } %>
                        </select>


                        <br>
                        <label for="">Thống Kê</label>
                        <select class="form-control" name="ib_s_id" id="">
                            <% for(var t = 0; t < stt.length; t++){ %>
                                <option name="ib_s_id" value="<%- stt[t].s_id %>"> <%- stt[t].s_name %></option>
                            <% } %>
                        </select>
                        <br>
                        <input type="submit" value="Tạo" style="width: 100%;">
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>